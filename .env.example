# Copy this file to .env and fill in your SMTP details
# Example providers: Gmail SMTP, Mailtrap, SendGrid SMTP relay, etc.

HOST=127.0.0.1
PORT=3000

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Optional: sender displayed in the confirmation email
FROM_EMAIL=your-name@example.com
